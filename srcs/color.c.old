#include "color.h"

static t_color	getcolor_more(t_2ipair m, t_2dpair p, double l)
{
	t_color	c;

	c.a = 0;
	if (p.x < m.x)
	{
		c.r = 0x84 * l;
		c.g = 0x8F * l;
		c.b = 0xA5 * l;
	}
	else
	{
		c.r = 0x4C * l;
		c.g = 0x4C * l;
		c.b = 0x47 * l;
	}
	return (c);
}

t_color			getcolor(t_2ipair m, t_2dpair p, t_raydata *d)
{
	t_color	c;
	double	l;

	l = d->dist > 6 ? 0 : (double)((1.0 - (d->dist / 6)));
	c.a = 0;
	if (d->side)
	{
		if (p.y < m.y)
		{
			c.r = 0xE5 * l;
			c.g = 0xDC * l;
			c.b = 0xC5 * l;
		}
		else
		{
			c.r = 0xC1 * l;
			c.g = 0x49 * l;
			c.b = 0x53 * l;
		}
		return (c);
	}
	else
		return (getcolor_more(m, p, l));
}

t_color		getcolor_floor(t_raydata *d, t_2ipair pos, int posy)
{
	t_color	c;
	double	l;
	d++;
	posy++;


	l = W_HEIGHT / (2.0 * pos.y - W_HEIGHT);
	l = l > 6 ? 0 : (double)((1.0 - (l / 6)));
	c.a = 0;
	c.r = 0x1B * l;
	c.g = 0x99 * l;
	c.b = 0x8B * l;
	return (c);
}

